{
  "manifest_version": 3,
  "name": "Github Toggle Extension",
  "version": "1.0",
  "description": "A simple extension to toggle Github buttons",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-github-buttons": {
      "suggested_key": {
        "default": "Ctrl+Shift+6"
      },
      "description": "Toggle Github buttons"
    },
    "Restart App": {
      "suggested_key": {
        "default": "Ctrl+Shift+7",
        "mac": "Command+Shift+7"
      },
      "description": "Restart my app (Debugging)"
    }
  }
}
